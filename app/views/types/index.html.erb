<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<% if !flash[:notice].blank? %>
  <%= flash[:notice] %>
<% end %>
<% no=0 %>
<h4>Types <%= link_to 'New', new_type_path, class:'btn btn-primary' %> | <%= link_to 'Back to Product', products_path, class:'btn btn-primary' %></h4>

<table class ="table table-striped table-hover">
  <tr>
    <td colspan="7">
      <%= form_for :form, url: search_type_path do |f| %>
      <%= f.text_field :search, placeholder:'search', value:@search, class: 'form-control' %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>No</th>
    <th>ID</th>
    <th>Title</th>
    <th>Detail</th>
    <th>View</th>
    <th>Update</th>
    <th>Delete</th>
  </tr>
  <% @type.each do |type| %>
  <tr>
    <td><%= no+=1 %></td>
    <td><%= type.id %></td>
    <td><%= type.title %></td>
    <td><%= type.detail %></td>
    <td><%= link_to '<i class="fa fa-align-justify"></i>'.html_safe , type_path(type.id) %></td>
    <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe , edit_type_path(type.id) %></td>
    <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe , type_path(type.id), method: :DELETE, data:{confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</table>
